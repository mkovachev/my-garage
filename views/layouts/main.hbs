<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Garage</title>
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
  <div class="col-lg-12">
    {{#if success}}
    <div class="alert alert-success">{{success}}</div>
    {{/if}}

    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
  </div>


  {{#if user}}
  <!-- Loogged in nav -->

  <div class="container">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <li role="presentation"><a href="/maintenance">Maintenance</a></li>
          <li role="presentation"><a href="/addvehicle">Add Vehicle</a></li>
          <li role="presentation"><a href="/addevent">Add Event</a></li>
          <li role="presentation"><a href="/">Logout</a></li>
        </ul>
      </nav>
      <h3 class="text-muted"><a href="/mygarage">My Garage</a></h3>
    </div>
  </div>

  {{else}}
  <!-- not logged nav -->

  <div class="container">
    <div class="header clearfix">
      <nav>
        <ul class="nav nav-pills pull-right">
          <form class="form-inline" method="post" action="/mygarage">
            <div class="form-group">
              <label class="sr-only" for="email">Email</label>
              <input type="email" class="form-control" placeholder="Email" name="email">
            </div>
            <div class="form-group">
              <label class="sr-only" for="password">Password</label>
              <input type="password" class="form-control" placeholder="Password" name="password">
            </div>
            <button type="submit" class="btn btn-default">Login</button>
          </form>
        </ul>
      </nav>
      <h3 class="text-muted"><a href="/">My Garage</a></h3>
    </div>
  </div>

  {{/if}}

  {{{body}}}

</body>

<footer class="footer">
  <p>&copy; 2020 My Garage</p>
</footer>

</html>